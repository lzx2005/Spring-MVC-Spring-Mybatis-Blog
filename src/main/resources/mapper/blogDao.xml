<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lzx2005.dao.BlogDao">
    <insert id="insertBlog">
        INSERT INTO `blog` (title,author,content,blog_type)
        VALUES (#{title},#{author},#{content},#{blogType})
    </insert>

    <insert id="insertBlogWithMarkdown">
        INSERT INTO `blog` (title,author,content,blog_type,markdown)
        VALUES (#{title},#{author},#{content},#{blogType},#{markdown})
    </insert>
    <select id="queryById" resultType="com.lzx2005.entity.Blog">
        SELECT * FROM `blog` WHERE blog_id = #{blogId}
    </select>

    <select id="findAll" resultType="com.lzx2005.entity.Blog">
        SELECT * FROM `blog`
        ORDER BY create_time DESC
        LIMIT #{offset},#{limit}
    </select>
</mapper>